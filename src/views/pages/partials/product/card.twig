<div class="product-card bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition">
    <a href="{{ product.url }}">
        <div class="relative">
            <img src="{{ product.image }}" alt="{{ product.name }}" class="w-full h-64 object-cover">
            {% if product.badge %}
            <span class="absolute top-2 right-2 bg-red-500 text-white px-3 py-1 rounded-full text-sm">
                {{ product.badge }}
            </span>
            {% endif %}
        </div>
        <div class="p-4">
            <h3 class="font-bold text-lg mb-2">{{ product.name }}</h3>
            <div class="flex items-center justify-between">
                <div>
                    {% if product.sale_price %}
                    <span class="text-gray-400 line-through text-sm">{{ product.regular_price }}</span>
                    <span class="text-primary font-bold text-xl">{{ product.sale_price }}</span>
                    {% else %}
                    <span class="text-primary font-bold text-xl">{{ product.price }}</span>
                    {% endif %}
                </div>
                <button class="bg-primary text-white px-4 py-2 rounded hover:bg-primary-dark transition">
                    {{ trans("product.add_to_cart") }}
                </button>
            </div>
        </div>
    </a>
</div>
