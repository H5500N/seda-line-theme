<div class="product-card-full-image relative overflow-hidden rounded-lg shadow-lg group">
    <a href="{{ product.url }}">
        <img src="{{ product.image }}" alt="{{ product.name }}" class="w-full h-96 object-cover group-hover:scale-110 transition duration-300">
        <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent flex items-end">
            <div class="p-6 text-white w-full">
                <h3 class="font-bold text-2xl mb-2">{{ product.name }}</h3>
                <p class="text-xl">{{ product.price }}</p>
            </div>
        </div>
    </a>
</div>
