{% extends "layouts/master.twig" %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">{{ trans("pages.brands.title") }}</h1>
    
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-6">
        {% for brand in brands %}
        <a href="{{ brand.url }}" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition">
            {% if brand.logo %}
            <img src="{{ brand.logo }}" alt="{{ brand.name }}" class="w-full h-24 object-contain">
            {% else %}
            <div class="text-center font-bold">{{ brand.name }}</div>
            {% endif %}
        </a>
        {% endfor %}
    </div>
</div>
{% endblock %}
