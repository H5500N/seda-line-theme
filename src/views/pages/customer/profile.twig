{% extends "layouts/master.twig" %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">{{ trans("pages.customer.profile") }}</h1>
    
    <div class="bg-white rounded-lg shadow-md p-8">
        <form method="post">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block mb-2">{{ trans("pages.customer.first_name") }}</label>
                    <input type="text" name="first_name" value="{{ customer.first_name }}" class="w-full border rounded px-4 py-2">
                </div>
                <div>
                    <label class="block mb-2">{{ trans("pages.customer.last_name") }}</label>
                    <input type="text" name="last_name" value="{{ customer.last_name }}" class="w-full border rounded px-4 py-2">
                </div>
                <div>
                    <label class="block mb-2">{{ trans("pages.customer.email") }}</label>
                    <input type="email" name="email" value="{{ customer.email }}" class="w-full border rounded px-4 py-2">
                </div>
                <div>
                    <label class="block mb-2">{{ trans("pages.customer.phone") }}</label>
                    <input type="tel" name="phone" value="{{ customer.phone }}" class="w-full border rounded px-4 py-2">
                </div>
            </div>
            <button type="submit" class="mt-6 bg-primary text-white px-6 py-3 rounded">
                {{ trans("pages.customer.save") }}
            </button>
        </form>
    </div>
</div>
{% endblock %}
