{% extends "layouts/master.twig" %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">{{ trans("pages.customer.orders") }}</h1>
    
    <div class="space-y-4">
        {% for order in orders %}
        <div class="bg-white rounded-lg shadow-md p-6">
            <div class="flex justify-between items-center">
                <div>
                    <h3 class="font-bold">{{ trans("pages.customer.order_number") }}: #{{ order.id }}</h3>
                    <p class="text-gray-600">{{ order.date }}</p>
                </div>
                <div class="text-right">
                    <p class="font-bold">{{ order.total }}</p>
                    <span class="text-sm px-3 py-1 rounded-full bg-gray-200">{{ order.status }}</span>
                </div>
            </div>
            <a href="{{ order.url }}" class="text-primary hover:underline mt-4 inline-block">
                {{ trans("pages.customer.view_details") }}
            </a>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
