<!-- AI Chatbot Component -->
<div id="ai-chatbot" class="fixed bottom-4 right-4">
    <button id="chatbot-toggle" class="bg-black text-white rounded-full w-16 h-16 flex items-center justify-center shadow-lg">
        <i class="fas fa-robot text-2xl"></i>
    </button>
    <div id="chatbot-window" class="hidden absolute bottom-20 right-0 w-80 bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="p-4 bg-black text-white">
            <h3 class="font-bold">المساعد الذكي</h3>
        </div>
        <div id="chatbot-messages" class="p-4 h-64 overflow-y-auto">
            <!-- Messages will be appended here -->
        </div>
        <div class="p-4 border-t">
            <input type="text" id="chatbot-input" class="w-full border rounded-lg p-2" placeholder="اكتب رسالتك...">
        </div>
    </div>
</div>
